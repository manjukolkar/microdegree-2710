pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                echo "Checking out source code..."
                // git url: 'https://github.com/your/repo.git'
            }
        }

        stage('Build') {
            steps {
                echo "Running build..."
                sh "echo Building project..."
            }
        }

        stage('Test') {
            steps {
                echo "Running tests..."
                sh "echo Tests completed."
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying application..."
                sh "echo Deployment complete."
            }
        }
    }
}
